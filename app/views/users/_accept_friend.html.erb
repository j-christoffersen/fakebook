<%= form_for current_user.friend_requestings.build, remote: true do |f| %>
  <%= hidden_field_tag :friend_id, @user.id %>
  <%= f.submit 'Accept Request' %>
<% end %>
<%= form_for @user.friend_requestings.find_by(friend_id: current_user.id), html: { method: 'delete' }, remote: true do |f| %>
  <%= f.submit 'No thanks' %>
<% end %>